generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model users {
  id String @id @default(uuid()) @db.VarChar(36)
  rolId String @db.VarChar(36)
  rol roles @relation(fields: [rolId], references: [id])
  firstName String @db.VarChar(150)
  lastName String @db.VarChar(150)
  email String @unique @db.VarChar(255)
  password String @db.VarChar(255)
  cuponCode String @db.VarChar(6)
  registrationDate DateTime @default(now())
  userCupons users_cupons[]
}

model roles {
  id String @id @default(uuid()) @db.VarChar(36)
  name String @db.VarChar(150)
  users users[]
}

model cupons {
  id String @id @default(uuid()) @db.VarChar(36)
  name String @db.VarChar(150)
  description String @db.VarChar(255)
  expirationDate DateTime
  isValid Boolean @default(true)
  userCupons users_cupons[]
}

model users_cupons {
  userId String @db.VarChar(36)
  user users @relation(fields: [userId], references: [id])
  cuponId String @db.VarChar(36)
  cupon cupons @relation(fields: [cuponId], references: [id])
  isAvailable Boolean @default(true)
  userCuponCode String? @db.VarChar(6)
  sentCuponDate DateTime @default(now())

  @@id([userId, cuponId])
}