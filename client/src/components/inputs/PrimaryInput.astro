---
const { id, type, name, placeholder, icon, iconView } = Astro.props;
---

<div class="relative border border-red-500">
  <i class={`${icon} text-primary text-xl absolute left-4 top-2`}></i>
  <input
    id={id}
    type={type}
    name={name}
    placeholder={placeholder}
    class={`flex border-primary border-2 rounded-lg px-4 py-2 ${icon ? "pl-12" : ""} w-full gap-4`}
  />
</div>
