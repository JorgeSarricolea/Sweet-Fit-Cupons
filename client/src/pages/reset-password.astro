---
import Layout from "@/components/Layout.astro";
import PrimaryBtn from "@/components/Buttons/PrimaryBtn.astro";
import PrimaryInput from "@/components/inputs/PrimaryInput.astro";
---

<Layout title={["Nueva Contraseña"]} description={["Nueva Contraseña"]}>
  <div class="flex h-screen justify-center items-center">
    
    <div
      class="flex w-5/6 m-auto bg-primary shadow-2xl justify-center items-center rounded-2xl"
    >
      <div
        class="w-full basis-2/3 p-0 md:h-full md:basis-1/2 justify-self-left bg-white rounded-b-lg md:rounded-none md:rounded-l-lg"
      >
        <div
          class="p-10 md:mt-36 w-full h-full flex flex-col justify-around space-y-10"
        >
          <div class="flex align-center pb-10">
            <p class="font-bold text-6xl text-primary">Recuperar <br> Contraseña</p>
          </div>
          <form class="text-center space-y-4" id="signup-form">
            <PrimaryInput
              id={["newPassword"]}
              type={["password"]}
              name={["newPassword"]}
              placeholder={["Nueva Contraseña"]}
              icon={["fa-solid fa-lock"]}
            />
            <PrimaryInput
              id={["confirmPassword"]}
              type={["password"]}
              name={["confirmPassword"]}
              placeholder={["Confirmar contraseña"]}
              icon={["fa-solid fa-lock"]}
            />
            <br />
            <PrimaryBtn description={["Cambiar"]} />
          </form>
        </div>
      </div>
      <div
        class="w-full basis-1/3 md:h-full md:basis-1/2 bg-primary rounded-t-lg md:rounded-none md:rounded-r-lg"
      >
      </div>
    </div>
  </div>
</Layout>

<script>
  import { API_URL } from "../js/config";

  document
    .getElementById("singup-form")
    .addEventListener("submit", async function (event) {
      event.preventDefault(); // Stop form submission

      // Get the main data from form
      const newPasswdlInput = document.getElementById("newPassword") as HTMLInputElement;
      const confirmPasswdInput = document.getElementById(
        "confirmPassword"
      ) as HTMLInputElement;

      const newPassword = newPasswdlInput.value;
      const confirmPassword = confirmPasswdInput.value;
    

      if (!newPassword || !confirmPassword) {
        alert("Por favor, complete todos los campos");
        return;
      }

      // Send data to server
      try {
        const response = await fetch(`${API_URL}/api/register`, { //ruta de cambiar contraseña
          method: "POST",
          headers: {
            "Content-Type": "application/json",
          },
          body: JSON.stringify({ newPassword, confirmPassword }),
        }); 

        if (response.ok) {
          // Redirect to the admin page
          alert("contraseña cambiada con exito")
          window.location.href = "/login";
        } else {
          const errorData = await response.json();
          throw new Error(errorData.error || "Error desconocido");
        }
      } catch (error) {
        console.error("Error:", error);
        alert("Hubo un error al iniciar sesión");
      }
    });
</script>

