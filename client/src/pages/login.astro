<div
  class="h-full w-full bg-gray-500 shadow-2xl flex flex-col-reverse md:flex-row"
>
  <div
    class="w-full basis-2/3 p-0 md:h-full md:basis-1/2 justify-self-left bg-white rounded-b-lg md:rounded-none md:rounded-l-lg"
  >
    <div
      class="p-10 md:mt-36 w-full h-full flex flex-col justify-around space-y-10"
    >
      <div class="flex align-center pb-10">
        <p class="font-bold text-6xl text-primary">Log in</p>
      </div>
      <form class="text-center space-y-4" id="login-form">
        <div
          class="border-primary border-2 rounded-md flex gap-1 space-x-2 h-1/4 items-center p-2"
        >
          <input
            id="email"
            type="email"
            name="email"
            placeholder="ejemplo@email.com"
            class="flex-1 h-full focus:outline-none text-xl"
          />
        </div>
        <div
          class="border-primary border-2 rounded-md flex gap-1 space-x-2 h-1/4 items-center p-2"
        >
          <input
            id="password"
            type="password"
            name="password"
            placeholder="Contraseña"
            class="flex-1 h-full focus:outline-none text-xl"
          />
        </div>
        <div class="text-left text-primary">
          <a href="">Olvidé mi contraseña</a>
        </div>
        <br />
        <input
          type="submit"
          value="INICIAR SESIÓN"
          class="bg-primary py-1 w-full h-1/4 text-white text-center font-bold rounded-md"
        />
      </form>
      <p class="text-primary mt-4">
        ¿No tienes cuenta? <a href="" class="font-bold">Regístrate</a>
      </p>
    </div>
  </div>
  <div
    class="w-full basis-1/3 md:h-full md:basis-1/2 bg-primary rounded-t-lg md:rounded-none md:rounded-r-lg"
  >
  </div>
</div>

<script>
  import { API_URL } from "../js/config";

  document
    .getElementById("login-form")
    .addEventListener("submit", async function (event) {
      event.preventDefault(); // Stop form submission

      // Get the main data from form
      const emailInput = document.getElementById("email") as HTMLInputElement;
      const passwordInput = document.getElementById(
        "password"
      ) as HTMLInputElement;

      const email = emailInput.value;
      const password = passwordInput.value;

      if (!email || !password) {
        alert("Por favor, complete todos los campos");
        return;
      }

      // Send data to server
      try {
        const response = await fetch(`${API_URL}/api/login`, {
          method: "POST",
          headers: {
            "Content-Type": "application/json",
          },
          body: JSON.stringify({ email, password }),
        });

        if (response.ok) {
          // Redirect to the admin page
          window.location.href = "/admin";
        } else {
          const errorData = await response.json();
          throw new Error(errorData.error || "Error desconocido");
        }
      } catch (error) {
        console.error("Error:", error);
        alert("Hubo un error al iniciar sesión");
      }
    });
</script>
