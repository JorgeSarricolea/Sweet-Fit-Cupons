---
import  MailIcon from "../components/icons/MailIcon.astro"
import LockIcon from "../components/icons/LockIcon.astro"
---
<div class="h-full w-full bg-gray-500 shadow-2xl flex flex-col-reverse md:flex-row">
    <div class="w-full basis-2/3 p-0 md:h-full md:basis-1/2 justify-self-left bg-white rounded-b-lg md:rounded-none md:rounded-l-lg">
        <div class="p-10 md:mt-28 w-full h-full flex flex-col justify-arround space-y-10">
            <div class="flex align-center pb-8">
                <p class="font-bold text-4xl text-primary">Sign up</p> 
            </div>
            <form action="" class=" text-center space-y-4">
                <div class="border-primary border-2 rounded-md flex gap-1 space-x-2 h-1/5 items-center pl-4">
                    <input type="text" name="name" id="text" placeholder="Nombre" class="flex-1 h-full focus:outline-none text-xl">
                </div>
                <div class="border-primary border-2 rounded-md flex gap-1 space-x-2 h-1/5 items-center pl-4">
                    <input type="text" name="lastname" id="text" placeholder="Apellido(s)" class="flex-1 h-full focus:outline-none text-xl">
                </div>
                <div class="border-primary border-2 rounded-md flex gap-1 space-x-2 h-1/5 items-center p-2">
                    <MailIcon/>
                    <input type="email" name="Email" id="email" placeholder="Tu correo" class="flex-1 h-full focus:outline-none text-xl">
                </div>
                <div class="border-primary border-2 rounded-md flex gap-1 space-x-2 h-1/5 items-center p-2">
                    <LockIcon/>
                    <input type="password" placeholder="Contraseña" class="flex-1 h-full focus:outline-none text-xl">
                </div>
                <br>
                <input type="submit" value="REGISTARSE" class="bg-primary py-1 w-full h-1/5 text-white text-xl text-center font-bold rounded-md">
            </form>
            <div>
                <p class="flex-auto text-primary mt-16">¿Ya tienes una cuenta? <a href="" class="font-bold">Iniciar Sesión</a></p>
            </div>
        </div>
    </div>
    <div class="w-full basis-1/3 md:h-full md:basis-1/2 bg-primary rounded-t-lg md:rounded-none md:rounded-r-lg"></div>
</div>
